<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<!-- File: hibernate.cfg.xml
 * Author: Saran Vadlamudi
 * Date: December 12, 2017
 * Description: hibernate settings
 -->
 
<hibernate-configuration>
	<session-factory>
	
	    <!-- See: http://docs.jboss.org/hibernate/orm/current/userguide/html_single/Hibernate_User_Guide.html#configurations-hbmddl -->
	    <property name="hbm2ddl.auto">update</property>
	    
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>

		<property name="hibernate.connection.username">root</property>

		<property name="hibernate.connection.password">Impact@2010</property>

		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate_examples</property>

		<property name="current_session_context_class">thread</property>
	</session-factory>
</hibernate-configuration>